@{
    ViewBag.Title = "Contact";
}


<!--contact -->
<section class="contact py-lg-4 py-md-3 py-sm-3 py-3">
    <div class="container py-lg-5 py-md-4 py-sm-4 py-3">
        <h3 class="title text-center mb-md-4 mb-sm-3 mb-3 mb-2">Contact Us</h3>
        <div class="title-wls-text text-center mb-lg-5 mb-md-4 mb-sm-4 mb-3">

        </div>
        <div class="address_mail_footer_grids">
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d817202.3861024495!2d174.30502620606845!3d-36.86170744554708!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x6d0d47fb5a9ce6fb%3A0x500ef6143a29917!2sAuckland%2C%20New%20Zealand!5e0!3m2!1sen!2sin!4v1584017614814!5m2!1sen!2sin" width="600" height="450" frameborder="0" style="border:0;" allowfullscreen="" aria-hidden="false" tabindex="0"></iframe>
        </div>
        <div class="row w3pvt-info-para pt-lg-5 pt-md-4 pt-3">
            <!--contact-map -->
            <div class="col-lg-6 col-md-6">
                <form action="sendMsg" method="post">
                    <div class="w3pvt-wls-contact-mid">
                        <div class="form-group contact-forms">
                            <input type="text" class="form-control" placeholder="Name" name="txtName" id="txtName" required="">
                        </div>
                        <div class="form-group contact-forms">
                            <input type="email" class="form-control" placeholder="Email" name="txtEmail" id="txtEmail" required="">
                        </div>
                        <div class="form-group contact-forms">
                            <input type="text" class="form-control" placeholder="Phone" name="txtContact" id="txtContact" required="">
                        </div>
                        <div class="form-group contact-forms">
                            <textarea class="form-control" placeholder="Message" rows="3" name="txtMsg" id="txtMsg" required=""></textarea>
                        </div>
                        

                        <input type="submit" value="Send Message" class="btn btn-primary" />

                    </div>
                </form>
            </div>
            <!--//contact-map -->
            <!--contact-form-->
            <div class="col-lg-6 col-md-6 contact-form">
                <div class="contact-list-grid">
                    <h4>Address</h4>
                    <p class="pt-2">new 40 street</p>
                    <p>New Zealand</p>
                </div>
                <div class="contact-list-grid mt-3">
                    <h4>Email</h4>
                    <p class="pt-2">
                        <a href="#">admin@gmail.com</a>
                    </p>
                </div>
                <div class="contact-list-grid mt-3">
                    <h4>Phone</h4>
                    <p class="pt-2">+64 9859 9823 858</p>

                </div>
            </div>
        </div>
    </div>
</section>
<!--//contact  -->